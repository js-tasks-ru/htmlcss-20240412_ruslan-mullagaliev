<div class="calendar {{#if preview}} calendar_preview{{/if}}">
  <div class=" calendar__title">{{title}}</div>
  <div class="calendar__wrapper">
    <div class="calendar__inner">
      {{#each weekdays}}
      <span class="calendar__item calendar__item_weekday">{{this}}</span>
      {{/each}}
      {{#each days}}
      <span
        class="calendar__item {{#if active}}calendar__item_active{{/if}}{{#if betweenActive}}calendar__item_between-active{{/if}}">{{day}}</span>
      {{/each}}
    </div>
  </div>
</div>