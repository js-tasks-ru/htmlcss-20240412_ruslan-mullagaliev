    "gulp": "^5.0.0",
    "gulp-compile-handlebars": "^0.6.1",
    "gulp-rename": "^2.0.0",
    "mocha": "^7.1.2",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-scss": "^4.0.9",
    "precss": "^4.0.0",
    "sass": "^1.77.4"
